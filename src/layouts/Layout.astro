---
interface Props {
  title: string;
}
import SpeedInsights from "@vercel/speed-insights/astro";
import {ViewTransitions} from "astro:transitions";
import NavComponent from "src/components/NavComponent.astro";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Open Graph meta tags -->
    <meta property="og:title" content="Jay Software - Custom Software Solutions" />
    <meta property="og:description" content="We specialize in providing custom software solutions tailored to your business needs." />
    <meta property="og:image" content="/assets/img/jay-logo.svg" />
    <meta property="og:url" content="https://jay-software.com" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="Jay Software" />

      <!-- Twitter Card meta tags -->
    <meta name="twitter:card" content="/assets/img/jay-logo.svg" />
    <meta name="twitter:site" content="@jay-software" />
    <meta name="twitter:title" content="Jay Software - Custom Software Solutions" />
    <meta name="twitter:description" content="We specialize in providing custom software solutions tailored to your business needs." />
    <meta name="twitter:image" content="/assets/img/jay-logo.svg" />

    <!-- CSS -->
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/assets/css/bootstrap-icons.css" rel="stylesheet" />
    <link href="/assets/css/boxicons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/assets/css/preloader.css" />
    <link rel="stylesheet" href="/assets/css/style2.css" />
    
    <!-- Title -->
    <title>{title}</title>
    <meta name="description" content="We specialize in providing custom software solutions tailored to your business needs." />
    <link
      rel="icon"
      href="/assets/img/sm-logo.svg"
      type="image/gif"
      sizes="20x20"
    />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <SpeedInsights />
    <ViewTransitions />
    <!-- Google tag (gtag.js) -->
    <script type="text/partytown" async src="https://www.googletagmanager.com/gtag/js?id=G-W3WFMSXE22"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-W3WFMSXE22');
    </script>
  </head>
  <body class="home-dark2 tt-magic-cursor">
    <NavComponent />
    <!-- End header section -->
    <slot />
    <!-- Start Footer section -->
    <footer>
      <div class="footer-btm">
        <div class="container">
          <div class="row">
            <div class="col-lg-12">
              <div class="footer-btn-content">
                <div class="copyright-area flex gap-2">
                  <p>
                    Â©Copyright <span id="copyrightYear"></span> Jay Software
                  </p>
                  <p>
                    <a href="/privacy">Privacy</a>
                  </p>
                </div>
                <div class="footer-social">
                  <ul>
                    <li>
                      <a
                        href="https://www.facebook.com/jaysoftwarero/"
                        aria-label="Facebook"
                        target="_blank"><i class="bx bxl-facebook"></i></a
                      >
                    </li>
                    <li>
                      <a
                        href="https://ro.linkedin.com/company/jaysoftware"
                        aria-label="LinkedIn"
                        target="_blank"><i class="bx bxl-linkedin"></i></a
                      >
                    </li>
                    <li>
                      <a
                        href="https://www.instagram.com/jay_software/"
                        aria-label="Instagram"
                        target="_blank"><i class="bx bxl-instagram"></i></a
                      >
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </footer>
    <!-- End Footer section -->
    <script is:inline>
      var currentYear = new Date().getFullYear();
      document.getElementById("copyrightYear").textContent = currentYear;
    </script>
  </body>
</html>
